extends layouts/main

block content
    .wrap 회원가입
        form.default-form(action=routes.signUp, method="post")
            input(type="text", name="id", placeholder="ID", required)
            input(type="text", name="password", placeholder="비밀번호", required)
            input(type="text", name="password2", placeholder="비밀번호 확인", required)
            input(type="text", name="name", placeholder="이름", required)
            input(type="text", name="company", placeholder="회사 이름", required)
            input(type="submit", value="회원가입")